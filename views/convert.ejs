<div class="content">
    <div class="result-container">
        <% if (filename) { %>
            <div class="success-animation">
                <i class="fas fa-check-circle"></i>
                <h2>Conversion Complete!</h2>
                <p>Your video has been successfully converted to MP3</p>
            </div>

            <div class="download-card">
                <div class="file-preview">
                    <i class="fas fa-file-audio"></i>
                    <div class="file-details">
                        <h3><%= filename.replace(/\.[^/.]+$/, "") %>.mp3</h3>
                        <p>MP3 Audio File â€¢ Ready to download</p>
                    </div>
                </div>
                
                <div class="download-actions">
                    <a href="/api/download/<%= filename %>" class="btn-download" download>
                        <i class="fas fa-download"></i> Download MP3
                    </a>
                    <a href="/" class="btn-convert-again">
                        <i class="fas fa-redo"></i> Convert Another
                    </a>
                </div>
            </div>

            <div class="share-section">
                <h4><i class="fas fa-share-alt"></i> Share with friends</h4>
                <div class="share-buttons">
                    <button class="share-btn" onclick="shareOnTwitter()">
                        <i class="fab fa-twitter"></i> Twitter
                    </button>
                    <button class="share-btn" onclick="shareOnFacebook()">
                        <i class="fab fa-facebook"></i> Facebook
                    </button>
                    <button class="share-btn" onclick="copyLink()">
                        <i class="fas fa-link"></i> Copy Link
                    </button>
                </div>
            </div>
        <% } else if (error) { %>
            <div class="error-result">
                <i class="fas fa-exclamation-triangle"></i>
                <h2>Conversion Failed</h2>
                <p><%= error %></p>
                <a href="/" class="btn-try-again">
                    <i class="fas fa-redo"></i> Try Again
                </a>
            </div>
        <% } %>
    </div>

    <div class="additional-tools">
        <h3><i class="fas fa-tools"></i> More Audio Tools</h3>
        <div class="tools-grid">
            <a href="#" class="tool-card">
                <i class="fas fa-compress-alt"></i>
                <h4>Audio Compressor</h4>
                <p>Reduce MP3 file size</p>
            </a>
            <a href="#" class="tool-card">
                <i class="fas fa-cut"></i>
                <h4>Audio Cutter</h4>
                <p>Trim and edit audio files</p>
            </a>
            <a href="#" class="tool-card">
                <i class="fas fa-volume-up"></i>
                <h4>Volume Booster</h4>
                <p>Increase audio volume</p>
            </a>
        </div>
    </div>
</div>